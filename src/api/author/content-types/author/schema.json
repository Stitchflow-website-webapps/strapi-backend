{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": "Create authors for your content"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "email": {
      "type": "string"
    },
    "aboutAuthor": {
      "type": "richtext"
    },
    "slugs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::slug.slug",
      "mappedBy": "author"
    },
    "role": {
      "type": "string"
    },
    "socialMediaList": {
      "type": "component",
      "repeatable": true,
      "component": "shared.social-media"
    },
    "metaData": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
